<!DOCTYPE html>
<html lang="en">

@await Html.PartialAsync("~/Views/Partials/Head.cshtml")

<body>
    <div class="container-scroller">
        @await Html.PartialAsync("~/Views/Partials/Navbar.cshtml")
        <div class="container-fluid page-body-wrapper">
            @await Html.PartialAsync("~/Views/Partials/Sidebar.cshtml")
            <div class="main-panel">
                <div class="content-wrapper">
                    <div class="row">
                        @RenderBody()
                    </div>
                </div>

                <footer class="footer">
                    <div class="d-sm-flex justify-content-center justify-content-sm-between">
                        <span class="text-muted text-center text-sm-left d-block d-sm-inline-block">Copyright © @DateTime.Now.Year</span>          
                    </div>
                </footer>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Partials/Scripts.cshtml")

</body>

</html>
