@model Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Image Page</h4>
            <form method="post">
                <input  type="hidden" asp-for="ID"/>
                <div class="form-group">
                    <label>Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label>ImageUrl</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>
