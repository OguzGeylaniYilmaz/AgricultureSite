@model Image
@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">New Image Entry</h4>
            <form method="post">
                <div class="form-group">
                    <label>Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                </div>
                <div class="form-group">
                    <label>ImageUrl</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="ImageUrl">
                </div>
                <div class="form-group">
                    <label>Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Description" placeholder="Description">
                </div>
                
