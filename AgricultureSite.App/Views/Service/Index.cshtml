@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Service List</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td><a href="/Service/EditService/@item.ID" class="btn btn-outline-primary">Edit</a></td>
                                <td><a href="/Service/DeleteService/@item.ID" class="btn btn-outline-danger">Delete</a></td>
                            </tr>
                        }
                </table>
                <a href="/Service/AddService/" class="btn btn-outline-success">Add Service</a>
            </div>
        </div>
    </div>
</div>