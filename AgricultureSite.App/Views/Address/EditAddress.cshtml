@model Address
@{
    ViewData["Title"] = "EditAddress";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Information Entry</h4>
            <form method="post">
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label>Description 1</label>
                    <input type="text" class="form-control" asp-for="Description1" placeholder="Description1">
                </div>
                <div class="form-group">
                    <label>Description 2</label>
                    <input type="text" asp-for="Description2" class="form-control" placeholder="Description2">
                </div>,
                <div class="form-group">
                    <label>Description 3 </label>
                    <input type="text" asp-for="Description3" class="form-control" placeholder="Description3">
                </div>
                <div class="form-group">
                    <label>Description 4</label>
                    <input type="text" asp-for="Description4" class="form-control" placeholder="Description4">
                </div> 
                <div class="form-group">
                    <label>Map Info</label>
                    <input type="text" asp-for="MapInfo" class="form-control" placeholder="MapInfo">
                </div>

                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>

