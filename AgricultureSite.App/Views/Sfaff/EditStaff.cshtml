@model Staff
@{
    ViewData["Title"] = "EditStaff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Edit Staff</h4>
            <form method="post">
                <input type="hidden" asp-for="ID" />
                <div class="form-group">
                    <label>Name</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name&Surname">
                </div>
                <div class="form-group">
                    <label>Job Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Job Title">
                </div>
                <div class="form-group">
                    <label>Image</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="ImageUrl" placeholder="Image">
                </div>
                <div class="form-group">
                    <label>Facebook Url</label>
                    <input type="text" class="form-control" asp-for="FacebookUrl" placeholder="FacebookUrl">
                </div>
                <div class="form-group">
                    <label>Instagram Url</label>
                    <input type="text" class="form-control" asp-for="InstagramUrl" placeholder="InstagramUrl">
                </div>
                <div class="form-group">
                    <label>Twitter Url</label>
                    <input type="text" class="form-control" asp-for="TwitterUrl" placeholder="TwitterUrl">
                </div>
                <div class="form-group">
                    <label>WebSite Url</label>
                    <input type="text" class="form-control" asp-for="WebSiteUrl" placeholder="WebSiteUrl">
                </div>
                <button type="submit" class="btn btn-primary me-2">Submit</button>
            </form>
        </div>
    </div>
</div>




