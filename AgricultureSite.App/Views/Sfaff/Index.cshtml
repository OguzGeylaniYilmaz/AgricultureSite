@model List<Staff>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Staff List</h4>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Task</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                   @foreach (var item in Model)
                   {
                        <tr>
                            <td class="py-1">
                                <img src="~/Admin/template/images/faces/face1.jpg" alt="image" />
                            </td>
                            <td>@item.ID</td>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td><a href="/Staff/EditStaff/@item.ID" class="btn btn-outline-primary">Edit</a></td>
                            <td><a href="/Staff/DeleteStaff/@item.ID" class="btn btn-outline-danger">Delete</a></td>
                        </tr>
                   }
                    </tbody>
                </table>
                <br />
                <a href="/Staff/AddStaff/" class="btn btn-outline-success">New Staff</a>
            </div>
        </div>
    </div>
</div>

