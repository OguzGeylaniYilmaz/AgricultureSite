@model List<Information>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Information List</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Edit</th>
                            <th>Delete</th>
                            <th>Make Active</th>
                            <th>Make Passive</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ID</td>
                                <td>@item.Title</td>
                                <td>@item.Date.ToShortDateString()</td>
                                <td><a href="/Information/EditInformation/@item.ID" class="btn btn-outline-primary">Edit</a></td>
                                <td><a href="/Information/DeleteInformation/@item.ID" class="btn btn-outline-danger">Delete</a></td>
                                <td><a href="/Information/ActiveStatus/@item.ID" class="btn btn-outline-warning">Active</a></td>
                                <td><a href="/Information/PassiveStatus/@item.ID" class="btn btn-outline-secondary">Passive</a></td>
                            </tr>
                        }
                </table>
                <a href="/Information/AddInformation/" class="btn btn-outline-success">Add Information</a>
            </div>
        </div>
    </div>
</div>


